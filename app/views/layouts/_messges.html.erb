<div class="row">
  <div class="col-xs-offset-2 col-xs-8 ">
    <% flash.each do |name , msg|%>
       <div class='alert alert-<%="#{name}"%>'>
         <a herf="#" class="close" data-dismiss="alert">&#215;</a>
         <%= content_tag :div,msg,:id => "flash_#{name}" if msg.is_a?(String) %>
    </div>
      <% end %>
  </div>
</div>
